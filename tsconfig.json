{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "DOM"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src"],
      "~": ["./"],
      "~/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/**/*.d.ts"],
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "plugins": [{ "transform": "ts-transformer-keys/transformer" }]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "*.d.ts",
    "scripts/**/*.ts"
  ]
}
